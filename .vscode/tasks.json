{
    "version": "2.0.0",
    "options": {
        "env": {
            "DOTNET_WATCH_SUPPRESS_LAUNCH_BROWSER": "1"
        }
    },
    "tasks": [
        {
            "label": "Run Contribution API",
            "dependsOn": [
                "Run Valkey",
                "Run Azure",
                "Run GitHub",
                "Run GitLab",
                "Run Hub"
            ],
            "dependsOrder": "parallel",
            "problemMatcher": []
        },
        {
            "label": "Run Valkey",
            "type": "shell",
            "command": "wsl docker run --rm --name valkey-dev -p 6379:6379 -v valkey_data:/data valkey/valkey:8.0-alpine valkey-server --maxmemory 256mb --maxmemory-policy allkeys-lru --appendonly yes --appendfsync everysec",
            "isBackground": false,
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "database"
            }
        },
        {
            "label": "Debug build Azure",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src/Contribution.AzureDevOps"
            },
            "command": "dotnet build --property WarningLevel=0",
            "problemMatcher": [],
            "hide": true,
            "presentation": {
                "reveal": "silent"
            },
            "group": {
                "kind": "build"
            }
        },
